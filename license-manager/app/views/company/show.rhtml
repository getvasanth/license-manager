<div id="orders">
  <h2>List of Orders</h2>
  <ul>
  <%= render(:partial => "order", :collection => @company.orders ) %>
  </ul> 
<p>
</div>

<div id="licenses">
  <h2>List of Licenses</h2>
  <table class="twikiTable" border="0" cellpadding="1" cellspacing="1"><tbody><tr>
  <th class="twikiFirstCol" bgcolor="#dadada"> <a rel="nofollow"><font color="#000000">Order Number</font></a> </th>
  <th bgcolor="#dadada"> <a rel="nofollow"><font color="#000000">Send Date</font></a> </th>
  <th bgcolor="#dadada"> <a rel="nofollow"><font color="#000000">Host ID</font></a> </th>
  <th bgcolor="#dadada"> <a rel="nofollow"><font color="#000000">Flow</font></a> </th>
  <th bgcolor="#dadada"> <a rel="nofollow"><font color="#000000">License File</font></a> </th>
  <th bgcolor="#dadada"> <a rel="nofollow"><font color="#000000">Comment</font></a> </th></tr>
  <% i=0 %>
  <% for license in @company.licenses %>
  <% i=i+1 %>
  <%= render(:partial => "license", :locals => { :license => license, :i =>i }) %>
  <!-- :collection => @company.licenses ) -->
  <% end %>
  </table>
<p>
</div>

